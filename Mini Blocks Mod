 if(yaw>360){ //if it's greater than 360 than subtract 360 and do it again (If this was not here than turning twice around would put us at 720 and continue to go up. We want to stay in the range of 0 to 360)
 yaw=yaw-360;
 findYaw();
 }
 if(yaw<0){ //if its less than zero than add 360 (turning the other way pretty much but same reason as above)
 yaw=yaw+360;
 findYaw();
 }
 if(yaw>=0&&yaw<=360){ //if it's in the range we want then tell us that we are ready
 ready=true;
