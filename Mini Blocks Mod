//Blocks turn in the direction you're facing
var yaw;
var id;
var ready=false;
function useItem(x,y,z,itemId,blockId,side){
//Stone Wall Slab
if(itemId==241){
preventDefault();
yaw=getYaw(getPlayerEnt())+45;
findYaw();
if(ready==true){ 
if(yaw>=0&&yaw<90){
id=242;
}if(yaw>=90&&yaw<180){
id=248;
}if(yaw>=180&&yaw<270){
id=249;
}if(yaw>=270&&yaw<360){
id=241;
} }if(side==1){ //top
setTile(x,y+1,z,id,0);
}if(side==0){ //bottom
setTile(x,y-1,z,id,0);
}if(side==2){
setTile(x,y,z-1,242,0);
}if(side==3){
setTile(x,y,z+1,249,0);
}if(side==5){ 
setTile(x+1,y,z,248,0);
}if(side==4){
setTile(x-1,y,z,241,0);
}Level.playSound(getPlayerX(),getPlayerY(),getPlayerZ(),"step.stone",30,25);
 }

