/*var yaw;
var id;
var ready=false;
//pre-define variables

function useItem(x,y,z,itemId,blockId,side){
 if(itemId==241){ //only use the id 241 because that is the one in the creative inventory. Also, make this the only craftable wall slab
 preventDefault(); //don't set the block down
 yaw=getYaw(getPlayerEnt())+45; //find the yaw plus 45 so that 0 to 90 is actually 45 to 135
 findYaw(); //find yaw within range of 0 to 360
 if(ready==true){ //once it finds it
 if(yaw>=0&&yaw<90){
 id=242;
 }
 if(yaw>=90&&yaw<180){
 id=248;
 }
 if(yaw>=180&&yaw<270){
 id=249;
 }
 if(yaw>=270&&yaw<360){
 id=241;
 }
 }
 if(side==1){ //if you tap top of block
 setTile(x,y+1,z,id,0);
 }
 if(side==0){ //bottom
 setTile(x,y-1,z,id,0);
 }
 if(side==2){ //For the other sides it actually doesnt even matter what direction you are facing, just put the block directly facing (away from) the with the wall
 setTile(x,y,z-1,242,0);
 }
 if(side==3){
 setTile(x,y,z+1,249,0);
 }
 if(side==5){ 
 setTile(x+1,y,z,248,0);
 }
 if(side==4){
 setTile(x-1,y,z,241,0);
 }
 
 }
 
