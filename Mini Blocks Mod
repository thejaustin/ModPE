function findYaw(){
if(yaw>360){
yaw=yaw-360;
findYaw();
}if(yaw<0){
yaw=yaw+360;
findYaw();
}if(yaw>=0&&yaw<=360){
ready=true;
} Level.playSound(getPlayerX(),getPlayerY(),getPlayerZ(),"step.stone",30,25);
 } }
