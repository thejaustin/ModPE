{clientMessage(ChatColor.DARK_GREEN + "Welcome back to Minecraft PE!");
{clientMessage(ChatColor.BLUE + "You are using the Mini Blocks Mod v1.8!"); //Mod Name & Version
{clientMessage(ChatColor.GOLD + "This Mod was created by thejaustin");
{clientMessage(ChatColor.RED + "v1.8 Changelog: 0.11.0 Supported, smaller code, fixed drops, fixed break time, & added block placing sound!"); //Changelog stuffs
{clientMessage(ChatColor.AQUA + "I'm on Twitter!");
{clientMessage(ChatColor.AQUA + "Username- @thejaustin");
}}}}}}
